<% provide(:title, 'Home') %>

<div class="header_slide">
  <div class="row">

    <div class="col-md-3">
      <div class="categories">
        <ul>
          <h3>Categories</h3>
          <% @categories.each do |category| %>
              <li><a href="#"><%= category['name'] %></a></li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="col-md-9">
      <%= render 'layouts/slider' %>

      <div class="main">
        <div class="content">
          <div class="content_top">
            <div class="heading">
              <h3>Products on Sale</h3>
            </div>
            <div class="see">
              <p><a href="#">See all Products</a></p>
            </div>
            <div class="clear"></div>
          </div>

          <%= render 'layouts/products_list' %>

        </div>
      </div>


    </div>
  </div>
  <div class="clear"></div>
</div>

