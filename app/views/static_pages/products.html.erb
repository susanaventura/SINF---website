<div class="row">
  <div class="col-md-3">
    <%= render partial: 'layouts/categories_list', locals: {categories: @categories} %>
    <%= render partial: 'layouts/stores_list', locals: {stores: @stores} %>
  </div>


  <div class="col-md-9">

    <div class="row">
      <div class="col-md-12">
        <% if params[:filterPoints] %><h1 class="title-page">Points store</h1>
        <% end %>
        <% if params[:filterOnSale] %><h1 class="title-page">On sale</h1>
        <% end %>
        <% if params[:codStore] %>
            <div class="back-links">
              <p>Stores >>
                <%= @stores[params[:codStore]]['name']%></p>
            </div>
        <% end %>
        <% if params[:codCategory] %>
            <div class="back-links">
              <p>Categories >>
               <%= @categories[params[:codCategory]]['name'] %></p>
            </div>
        <% end %>
        <% if params[:searchString] %>
            <div class="back-links">
              <p>Search >>
                <%= params[:searchString] %></p>
            </div>
        <%end%>
      </div>
    </div>

    <div class="row text-center">
      <div class="col-md-12">
        <p><%= will_paginate @products %></p>
      </div>
    </div>

    <%= page_entries_info @products, model: 'product' %>


    <%= render partial: 'layouts/products_list', locals: {products: @products} %>

    <div class="row text-center">
      <div class="col-md-12">
        <p><%= will_paginate @products %></p>
      </div>
    </div>
  </div>
</div>