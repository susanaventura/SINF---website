<% provide(:title, 'Edit address') %>
<div class="row">
  <div class="col-md-12 col-md-offset-2">
    <h1 class="title-page">My account - edit address</h1>
  </div>

</div>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <hr>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>
        <%= f.hidden_field :page_source, :value => 'edit_address'%>

        <div class="form-group">
          <div class="row">
            <div class="col-md-12">
              <%= f.label :address, class: 'control-label' %>
              <%= f.text_field :address, class: 'form-control'%>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-md-6">
              <%= f.label :local, class: 'control-label' %>
              <%= f.text_field :local, class: 'form-control' %>
            </div>

            <div class="col-md-6">
              <%= f.label :postal_address, class: 'control-label' %>
              <%= f.text_field :postal_address, class: 'form-control' %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-6 text-left">
            <button class="btn btn-primary btn-light-red">Cancel</button>
          </div>
          <div class="col-md-6 text-right">
            <%= f.submit "Edit", class: "btn btn-primary btn-red" %>
          </div>
        </div>


    <% end %>
  </div>
</div>