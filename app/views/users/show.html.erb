<% provide(:title, 'My account') %>

<div class="row">
  <div class="col-md-12">
      <h3> <%=@user.name%> </h3>
      <h3> Pagina Temporaria </h3>

      <%= @user.inspect %>

    <h1>My Account</h1>
    <div class="panel panel-default">
      <div class="panel-heading">
        My Account 
        Username: <%= @user.username %>
      </div>
      <div class="panel-body">My Orders</div>
      <!--Table-->
      <table class="table table-bolder">
        <div class="rows">
          <div class="col-xs-6 col-md-3"></div>
          <th>OrderID</th>
          <th>Date</th>
          <th>Total</th>
          <th>Status</th>
          <th>Options</th>
        </div>

      </table>
      <div class="panel-footer">About Me</div>

      <form>
        <div class="form-group">
          <h3> <%=@user.email%> </h3>
          
          Email: <%= @user.email %>
          Username: <%= @user.username %>

          <label for="email1">Email Address</label>
          <input type="email" class="form-control" id="myAccountEmail" placeholder="Email">

        </div>
        <div class="form-group">
          Password: <%= @current_user.password %>
          password: <%= @user.password %>
          <label for="emailPassword1">Password</label>
          <input type="password" class="form-control" id="emailPassword1" placeholder="password">
        </div>
      </form>

  </div>

 </div>
</div>