<% provide(:title, 'Edit account') %>
<div class="row">
  <div class="col-md-12 col-md-offset-2">
    <h1 class="title-page">My account - edit account</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <hr>
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>
        <%= f.hidden_field :page_source, :value => 'edit_account'%>

        <div class="form-group">
          <%= f.label :name, class: 'control-label' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :taxpayer_num, class: 'control-label' %>
          <%= f.text_field :taxpayer_num, class: 'form-control' %>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-md-6">
              <%= f.label :password, class: 'control-label' %>
              <%= f.password_field :password, class: 'form-control' %>
            </div>
            <div class="col-md-6">
              <%= f.label :password_confirmation, "Confirmation", class: 'control-label' %>
              <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-6 text-left">
            <%= link_to 'Cancel', user_path(current_user),class:'btn btn-primary btn-light-red' %>
          </div>
          <div class="col-md-6 text-right">
            <%= f.submit "Edit", class: "btn btn-primary btn-red" %>
          </div>
        </div>
    <% end %>
  </div>
</div>
